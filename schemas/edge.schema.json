{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Edge",
  "type": "object",
  "required": [
    "from",
    "to",
    "dir"
  ],
  "properties": {
    "from": {
      "type": "string"
    },
    "to": {
      "type": "string"
    },
    "dir": {
      "type": "string",
      "enum": [
        "north",
        "south",
        "east",
        "west",
        "up",
        "down"
      ]
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}