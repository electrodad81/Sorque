    "id",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "steps": {
      "type": "array"
    },
    "rewards": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}